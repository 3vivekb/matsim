<!ELEMENT stations          (twoway*,oneway*,freefloating*)>
<!ATTLIST stations
          name           CDATA   #IMPLIED
          reference_layer  CDATA #IMPLIED
          xml:lang       NMTOKEN "de-CH">

<!ELEMENT twoway          (vehicle*)>
<!ATTLIST twoway
          id           CDATA   #REQUIRED
          lat  	       CDATA #REQUIRED
          lon       CDATA #REQUIRED>

<!ELEMENT oneway          (vehicle*)>
<!ATTLIST oneway
          id           CDATA   #REQUIRED
          lat  	       CDATA #REQUIRED
          lon       CDATA #REQUIRED
	  freeparking	CDATA #REQUIRED>

<!ELEMENT freefloating          EMPTY>
<!ATTLIST freefloating
          id           CDATA   #REQUIRED
          lat  	       CDATA #REQUIRED
          lon       CDATA #REQUIRED
	  type	CDATA #REQUIRED>

<!ELEMENT vehicle         EMPTY>
<!ATTLIST vehicle
          type             CDATA                    #REQUIRED
          vehicleID            CDATA                    #REQUIRED>
          
