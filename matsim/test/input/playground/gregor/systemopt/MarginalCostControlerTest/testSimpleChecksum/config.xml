<?xml version="1.0" ?>
<!DOCTYPE config SYSTEM "http://www.matsim.org/files/dtd/config_v1.dtd"
	[
		<!ENTITY INPUTBASE    "./test/input/playground/gregor/systemopt/MarginalCostControlerTest/testSimpleChecksum">
		<!ENTITY OUTPUTBASE   "./test/output/playground/gregor/systemopt/MarginalCostControlerTest/testSimpleChecksum">
	]
>
<config>

<!-- ====================================================================== -->

	<module name="global">
		<param name="coordinateSystem" value="GK4" />
	</module>	

<!-- ====================================================================== -->

	<module name="simulation">

		<param name="evacuationTime" value = "09:00:00" /> <!-- make sure that the specific snapshot plans file exists -->
         	<param name="endTime" value="12:00:00" />

		<param name="flowCapacityFactor"	value="0.01" />
		<param name="storageCapacityFactor"	value="0.01" />
		<param name="stuckTime" value="60" />		
	</module>

<!-- ====================================================================== -->

	<!-- Params for EvacuationQSimControler -->
	<module name="evacuation">
		<param name="inputEvacuationAreaLinksFile" value = "&INPUTBASE;/evacuationarea.xml.gz"/> 
	</module>

<!-- ====================================================================== -->

	<module name="controler">
		<param name="outputDirectory" value="&OUTPUTBASE;" />
		<param name="firstIteration" value="0" />
		<param name="lastIteration" value="10" />
		<param name="travelTimeCalculator" value="TravelTimeCalculatorHashMap" />
		<param name="travelTimeBinSize" value="60" />
	</module>	
	
<!-- ====================================================================== -->	

	<module name="plans">
		<param name="inputPlansFile" value="&INPUTBASE;/positionInfoPlansFile09-00-00.xml.gz" /><!-- the intial plans  -->
		
		<param name="outputPlansFile" value="&OUTPUTBASE;/evacuationplans.xml" />		
		<param name="outputVersion" value="v4" />		

		<param name="outputSample" value="1" />
	</module>
	
<!-- ====================================================================== -->	
	
	<module name="network">
		<param name="inputNetworkFile" value="./test/scenarios/berlin/network.xml.gz" />
		<param name="outputVersion" value="v1" />
	</module>
	
<!-- ====================================================================== -->	

	<module name="planCalcScore">
		<param name="learningRate" value="1.0" />
	
		<param name="BrainExpBeta" value="10" />

		<param name="lateArrival" value="0" />
		<param name="earlyDeparture" value="-0" />
		<param name="performing" value="0" />
		<param name="traveling" value="-6" />
		<param name="distanceCost" value="0" />
		<param name="waiting" value="0" />
		
		<!-- Activity indices (the numbers after the '_') go from 0 to n.  The ordering doesn't matter.  -->
		<param name="activityType_0"            value="h" /> <!-- home -->
		<param name="activityPriority_0"        value="1" />
		<param name="activityTypicalDuration_0" value="12:00:00" />
		<param name="activityMinimalDuration_0" value="08:00:00" />
	


	</module>

	<!-- ====================================================================== -->

	<module name="strategy">
		<param name="maxAgentPlanMemorySize" value="4" /> <!-- 0 means unlimited -->
		<param name="ModuleProbability_1" value="0.9" />
		<param name="Module_1" value="ChangeExpBeta" />

		<param name="ModuleProbability_2" value="0.1" />
		<param name="Module_2" value="ReRoute_Dijkstra" />

	</module>

<!-- ====================================================================== -->
</config>
