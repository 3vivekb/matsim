  <artifactId>matsim</artifactId>
  <name>MATSim</name>
  <version>0.1</version>
  <description></description>
  <url>matsim.org</url>
  <inceptionYear>2006</inceptionYear>
  <licenses>
    <license>
      <name>GNU General Public License</name>
      <url>{BASEDIR}/COPYING</url>
      <comments>See also the LICENSE file</comments>
    </license>
  </licenses>
  <build>
  	<defaultGoal>compiler:compile</defaultGoal>
    <sourceDirectory>src/</sourceDirectory>
    <testSourceDirectory>test/src/</testSourceDirectory>
    <outputDirectory>bin/</outputDirectory>
    <testOutputDirectory>bin/</testOutputDirectory>
    <resources>
      <resource>
        <directory>./</directory>
        <includes>
          <include>res/**/*.*</include>
          <include>dtd/**/*.*</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
          <showWarnings>false</showWarnings>
          <showDeprecation>false</showDeprecation>
          <!-- configure initial and maximal memory for compiling -->
          <fork>true</fork>
          <meminitial>128m</meminitial>
          <maxmem>512m</maxmem>
          <compilerArguments>
            <Xmaxwarns>4000</Xmaxwarns>
            <Xmaxerrs>100</Xmaxerrs>
          </compilerArguments>
          <!-- Uncommenting the following lines can be used to in- or exclude
          sources from compilation -->
          <includes>
            <include>org/matsim/**/*.java</include>
            <include>tutorial/**/*.java</include>
             <include>playground/**/*.java</include> 
            <include>de/schlichtherle/**/*.java</include>
          </includes>
<!--          <excludes>-->
<!--            <exclude></exclude>-->
<!--          </excludes>-->
          <!-- Uncommenting the following lines can be used to in- or exclude
          TEST sources from compilation -->
<!--          <testExcludes>-->
<!--            <exclude>org/matsim/testcases/TestDepth.java</exclude>-->
<!--          </testExcludes>-->
<!--          <testIncludes>-->
<!--            <include>org/matsim/testcases/TestDepth</include>-->
<!--          </testIncludes>-->
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <excludes>
            <exclude>**/*$*</exclude> <!-- exclude all inner classes -->
            <exclude>org/matsim/testcases/TestDepth.java</exclude>
            <!-- <exclude>playground/mfeil/ControlerTest.java</exclude>    
            <exclude>playground/yu/visum/test/NewPlansTest.java</exclude>
            <exclude>playground/wrashid/test/**/*.java</exclude>-->
            <exclude>playground/**/*.java</exclude>
            <exclude>org/matsim/**/*AllTests*.java</exclude>
            <exclude>org/matsim/**/*SimpleTests.java</exclude>
            <exclude>org/matsim/testcases/MatsimTestCase.java</exclude>
			      <exclude>org/matsim/mobsim/jdeqsim/util/TestHandlerDetailedEventChecker</exclude>
            <exclude>org/matsim/core/mobsim/jdeqsim/TestDESStarter_Berlin.java</exclude>
          </excludes>
          <forkMode>once</forkMode>
          <!-- avoid out of memory errors: -->
          <argLine>-Xmx600m</argLine>
          <enableAssertions>false</enableAssertions> <!-- this should be set to true, but we still have some tests that don't work otherwise... -->
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
        </configuration>
      </plugin>
    </plugins>
  </build>
  
  
  <reporting>
    <!-- this plugin generates a html test report -->
    <plugins>
      <plugin>
