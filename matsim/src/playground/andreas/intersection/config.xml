>

<config>

	<module name="network">
<!--		<param name="inputNetworkFile" value="&INPUTBASE;/test/data/net_4a.xml.gz" />-->
		<param name="inputNetworkFile" value="&INPUTBASE;/test/data/net_2a_alt.xml.gz" />
		<param name="outputNetworkFile" value="&OUTPUTBASE;/network.xml" />
	</module>

	<module name="plans">
		<param name="inputPlansFile" value="&INPUTBASE;/test/data/plans_2a_2500.xml.gz" />
