<?xml version="1.0" ?>
<!DOCTYPE config SYSTEM "http://www.matsim.org/files/dtd/config_v1.dtd"
	[
		<!ENTITY INPUTBASE    "./examples/evacuation-tutorial">
		<!ENTITY OUTPUTBASE   "./output">
		<!ENTITY LOCALDTDBASE "./dtd">
		<!ENTITY WEBDTDBASE   "http://www.matsim.org/files/dtd">
	]
>
<config>

<!-- ====================================================================== -->
        <module name="global">
		<param name="coordinateSystem" value="Atlantis" />
	</module>


<!-- ====================================================================== -->

	<module name="simulation">
		<!-- "start/endTime" of MobSim (00:00:00 == take earliest activity time/ run as long as active vehicles exist) -->
		<param name="startTime" value="00:00:00" />
		<param name="endTime" value="00:00:00" />
		

		<param name = "snapshotperiod"	value = "00:01:00" /> <!-- 00:00:00 means NO snapshot writing -->
		<param name = "snapshotFormat"	value = "googleearth,netvis,transims" /> <!-- netvis, googleearth, transims, plansfile -->

		
		<param name = "flowCapacityFactor"	value = "0.1" />
		<param name = "storageCapacityFactor"	value = "0.1" />
		<param name="stuckTime" value="600" />		
	</module>

<!-- ====================================================================== -->

	<!-- Params for EvacuationQSimControler -->
	<module name="evacuation">
		<param name="inputEvacuationAreaLinksFile" value = "&INPUTBASE;/evacuationarea_siouxfalls.xml.gz"/>
	</module>

<!-- ====================================================================== -->

<!-- ====================================================================== -->


	<module name="controler">
		<param name="outputDirectory" value="&OUTPUTBASE;" />
		<param name="firstIteration" value="0" />
		<param name="lastIteration" value="0" />
	</module>	
	
<!-- ====================================================================== -->	

	<module name="plans">
		<param name="inputPlansFile" value="&INPUTBASE;/siouxfalls_plans.xml.gz" /><!-- the intial plans  -->
		
		<param name="localInputDTD" value="&LOCALDTDBASE;/plans_v4.dtd" />
		<param name="outputPlansDTD" value="&LOCALDTDBASE;/plans_v4.dtd" />				
		
		<param name="outputPlansFile" value="&OUTPUTBASE;/evacuationplans_siouxfalls.xml" />		
		<param name="outputVersion" value="v4" />		


	</module>
	
<!-- ====================================================================== -->	
	
	<module name="network">
		<param name="inputNetworkFile" value="&INPUTBASE;/siouxfalls_net.xml.gz" />
		<param name="localInputDTD" value="&LOCALDTDBASE;/network_v1.dtd" />
		<param name="outputVersion" value="v1" />
		<param name="outputNetworkDTD" value="&LOCALDTDBASE;/network_v1.dtd" />

	</module>
	
<!-- ====================================================================== -->	

	<module name="planCalcScore">

		<param name="learningRate" value="1.0" />
	
		<param name="BrainExpBeta" value="2" />
		<param name="PathSizeLogitBeta" value="1" /> 


		<param name="lateArrival" value="0" />
		<param name="earlyDeparture" value="-0" />
		<param name="performing" value="0" />
		<param name="traveling" value="-6" />
		<param name="distanceCost" value="0" />
		<param name="waiting" value="-6" />
		
		<!-- Activity indices (the numbers after the '_') go from 0 to n.  The ordering doesn't matter.  -->
		<param name="activityType_0"            value="h" /> <!-- home -->
		<param name="activityPriority_0"        value="1" />
		<param name="activityTypicalDuration_0" value="12:00:00" />
		<param name="activityMinimalDuration_0" value="08:00:00" />
	
		<param name="activityType_1"            value="w" /><!-- work -->
		<param name="activityPriority_1"        value="1" />
		<param name="activityTypicalDuration_1" value="08:00:00" />
		<param name="activityMinimalDuration_1" value="06:00:00" />
		<param name="activityOpeningTime_1"     value="07:00:00" />
		<param name="activityLatestStartTime_1" value="09:00:00" />
		<param name="activityEarliestEndTime_1" value="" />
		<param name="activityClosingTime_1"     value="18:00:00" />
	
	</module>
	
<!-- ====================================================================== -->
	<module name="strategy">
		<param name="maxAgentPlanMemorySize" value="10" /> <!-- 0 means unlimited -->
		<param name="ModuleProbability_1" value="0.9" />
		<param name="Module_1" value="BestScore" />


		<param name="ModuleProbability_2" value="0.1" />
		<param name="Module_2" value="ReRoute" />
	</module>

<!-- ====================================================================== -->
</config>
